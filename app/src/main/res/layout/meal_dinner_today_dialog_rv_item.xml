<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mealDinnerTodayRv"
        android:background="@color/dialog_background_color"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <!--   점표시 아이콘-->
        <ImageView
            android:id="@+id/dinnerMealTodayPointIc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_meal_point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--   오늘 급식 텍스트뷰-->
        <TextView
            android:id="@+id/dinnerMealTodayDialogInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:fontFamily="@font/pretendard"
            android:text="치킨마요 덮밥"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_1"
            android:maxLength="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dinnerMealTodayPointIc"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>