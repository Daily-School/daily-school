<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/planCalendarLayout"
        android:background="@color/background_color"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
<!--        android:paddingStart="16dp"-->
<!--        android:paddingEnd="16dp"-->
<!--        android:paddingTop="12dp"-->
<!--        android:paddingBottom="12dp">-->

        <!-- 날짜를 나타내는 텍스트 뷰 -->
        <RelativeLayout
            android:id="@+id/planCalendarRvLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/planCalendarCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_circle" />

            <TextView
                android:id="@+id/planCalendarRvTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/pretendard"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/gray_1" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firstPlanTodoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstPlanTodoColorImageView"
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_blue_fill" />

            <TextView
                android:id="@+id/firstPlanTodoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard"
                android:text="수행평가"
                android:textSize="10sp"
                android:textColor="@color/gray_1"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondPlanTodoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/secondPlanTodoColorImageView"
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_blue_fill" />

            <TextView
                android:id="@+id/secondPlanTodoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard"
                android:text="수행평가"
                android:textSize="10sp"
                android:textColor="@color/gray_1"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdPlanTodoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/thirdPlanTodoColorImageView"
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_blue_fill" />

            <TextView
                android:id="@+id/thirdPlanTodoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard"
                android:text="수행평가"
                android:textSize="10sp"
                android:textColor="@color/gray_1"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </LinearLayout>

</layout>